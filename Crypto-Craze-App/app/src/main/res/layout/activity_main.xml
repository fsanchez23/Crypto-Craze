<?xml version="1.0" encoding="utf-8"?>



<TableLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/teal_200"
    >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crypto Pocket"
            android:textSize="35sp"
            android:textAlignment="center"
            android:background="@color/teal_200"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top 5 Crypto"
            android:background="#E0E0E0"
            android:textSize="25sp"
            android:textAlignment="center"/>



        <TableRow
            android:id="@+id/trBitcoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/teal_700"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/bitcoin" />

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/txtBitcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="$54000"
                android:textSize="25sp" />

        </TableRow>


        <TableRow
            android:id="@+id/trEthereum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/ethereum" />

            <TextView
                android:id="@+id/txtEthereum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="$406"
                android:layout_marginStart="10dp"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:id="@+id/trBinanceCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/bnb" />

            <TextView
                android:id="@+id/txtBNB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="10dp"
                android:text="$231"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:id="@+id/trDoge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/doge" />

            <TextView
                android:id="@+id/txtDoge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="$1230"
                android:layout_marginStart="10dp"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:id="@+id/trCardano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/cardano" />

            <TextView
                android:id="@+id/txtCardano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="$50"
                android:layout_marginStart="10dp"
                android:textSize="25sp" />

        </TableRow>



        <ListView
            android:layout_marginTop="5dp"
            android:id="@+id/coinList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/coin_list_item"
            />





    </TableLayout>
